# Database Configuration
# Replace with your actual AWS RDS connection details
DATABASE_URL=postgresql://username:password@your-rds-endpoint.region.rds.amazonaws.com:5432/northwind
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=5432
DB_NAME=northwind
DB_USER=username
DB_PASSWORD=password
DB_SSL_MODE=require

# Connection Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# MCP Server Configuration
MCP_SERVER_NAME=northwind-mcp-server
MCP_SERVER_VERSION=1.0.0
MCP_SERVER_DESCRIPTION=MCP Server for Northwind Database Operations

# Query Limits and Security
MAX_QUERY_ROWS=1000
QUERY_TIMEOUT_SECONDS=30
ENABLE_QUERY_LOGGING=true
ALLOWED_SCHEMAS=public

# Report Configuration
REPORTS_CACHE_TTL=300
MAX_REPORT_ROWS=5000
DEFAULT_DATE_FORMAT=%Y-%m-%d
REPORTS_OUTPUT_DIR=./reports

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=northwind-mcp.log
ENABLE_QUERY_AUDIT=true

# Cache Configuration (Optional - if using Redis)
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=false
CACHE_TTL=300

# Security Settings
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Development Settings
DEBUG=false
DEVELOPMENT_MODE=false
ENABLE_CORS=false
